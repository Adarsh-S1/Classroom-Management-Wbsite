<head>

	<meta charset="utf-8" />
	<meta name="description" content="Headers datatables examples" />
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
	<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700" />
	<link href="../Studtable/style.bundled1cf.css" rel="stylesheet" type="text/css" />
	<link href="../Studtable/style.bundled1cf.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" type="text/css" href="../Studtemplate/assets/css/style.css">
	<link rel="stylesheet" href="../Template/css/vendors_css.css">
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/css/datepicker.css" rel="stylesheet" type="text/css" />

</head>

<body id="bg">
	
<div class="page-wraper">
        <div class="page-content ">
<div class="page-banner ovbl-dark"
                style="background-image:url(../Studtemplate/assets/images/banner/banner3.jpg);">
                <div class="container">
                    <div class="page-banner-entry">
                        <h1 class="text-white">NOTES</h1>
                    </div>
                </div>
            </div>
    <div style="margin-top: 100px;" class="d-flex flex-column flex-root">
		<div class="d-flex flex-row flex-column-fluid page">

			<div class="d-flex flex-column flex-row-fluid" id="kt_wrapper">
				<center>
					<h1 style=" font-family: 'Times New Roman', Times, serif;">ATTENDANCE</h1>
				</center>
				<center>
					<h4 >{{datecheck}}</h4>
				</center>

				<div class="content d-flex flex-column flex-column-fluid" id="kt_content">

					<div class="d-flex flex-column-fluid">
						<!--begin::Container-->

						<div class="container">

									<center>
										
										<div class='col-sm-offset-4 col-sm-4'>
												<div class="form-group">
													<div class='input-group date' id='datetimepicker1'>
														<label>Select Date: </label>
<div id="datepicker" class="input-group date" data-date-format="mm-yyyy">
    <input id="date" class="form-control" type="text" readonly />
    <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
</div>

													</div>
												</div>
												<p class="help-block"><strong>Date format:</strong> mm-yyyy</p>
												<a href='' onclick="this.href='/attendate/'+document.getElementById('date').value;"><button style="margin-bottom: 20px;" class="btn btn-success" type="submit">Submit</button></a>
										</div>
									</center>
							<div class="card card-custom">
								<div class="card-body">
									<!--begin: Datatable-->
									<table class="table table-bordered table-hover table-checkable " id="kt_datatable">
										<thead>

											<tr>

												<th>
													<center>Date</center>
												</th>
												<th>
													<center>Attendance</center>
												</th>
											</tr>
										</thead>
										<tbody>
											{{#each attendance}}
											<tr>
												<td>
													<center>{{this.attendate}}</center>
												</td>
												<td>
													<center>{{this.status}}</center>
												</td>
												<td hidden nowrap="nowrap"></td>
											</tr>
											{{/each}}
										</tbody>
									</table>
								</div>
							</div>
						</div>
					</div>
				</div>

			</div>
		</div>
	</div>
</div>
</div>
</body>
	<script src="../Template/js/vendors.min.js"></script>
	<script src="../Template/corenav-master/coreNavigation-1.1.3.js"></script>
	<script src="../Template/vendor_components/jquery-ui/jquery-ui.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/js/bootstrap-datepicker.js"></script>
<script>
	$(function () {
  $("#datepicker").datepicker({ 
        autoclose: true, 
        todayHighlight: true 
  }).datepicker('update', new Date());
});

</script>
